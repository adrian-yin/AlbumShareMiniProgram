/**index.wxss**/
.head {
  padding: 80rpx 70rpx 0 70rpx;
  width: 100%;
  height: 130rpx;
}
.login-button {
  border-radius: 30rpx;
  text-align: center;
  background-image: linear-gradient(to right, #F9D5A7, #FFB085);
}
#user-info{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
#avatar {
  width: 100rpx;
  height: 100rpx;
}
#nickName {
  margin-left: 30rpx;
}
#createButton {
  float: right;
  display:flex;
  align-items: center;
  justify-content: center;
  position: relative;
  top: -100rpx;
  width: 280rpx;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 40rpx;
  background-image: linear-gradient(to right, #F9D5A7, #FFB085);
}

#albumsArea {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  padding: 70rpx 40rpx 0 40rpx;
  width: 100%;
}
#noAlbums {
  display: block;
  position: relative;
  top: 250rpx;
  left: 20rpx;
}
.album {
  margin-top: 40rpx;
  padding: 20rpx 30rpx;
  width: 100%;
  background-image: linear-gradient(#F9D5A7 60%, #90AACB);
  border-radius: 30rpx;
  cursor: pointer;
}
.album-title {
  display: block;
  margin-bottom: 25rpx;
  font-size: 45rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
  color: #555555;
  text-shadow: #FFB085 8rpx 8rpx 1rpx;
}
.album-preview-pictures image {
  margin-right: 15rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
}