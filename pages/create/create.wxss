/* pages/create/create.wxss */
#picturesArea {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-content: flex-start;
    flex-wrap: wrap;
    width: 652rpx;
    height: 652rpx;
}

.picture {
    margin-top: 13rpx;
    margin-left: 13rpx;
    width: 200rpx;
    height: 200rpx;
}

#addPictureButton {
    cursor: pointer;
}

#infoArea {
    flex: 2;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 652rpx;
    padding: 50rpx 30rpx;
}

.title-input {
    padding: 20rpx 5rpx;
    border-bottom: solid #FFB085 1rpx;
    font-size: 45rpx;
    color: #6e8ab3;
}

#buttonArea {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 40rpx 0;
    width: 652rpx;
}

#submitButton {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 300rpx;
    height: 100rpx;
    border-radius: 50rpx;
    font-size: 40rpx;
    letter-spacing: 5rpx;
    background-image: linear-gradient(to right, #F9D5A7, #FFB085);
}