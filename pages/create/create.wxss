/* pages/create/create.wxss */
#picturesArea {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-content: flex-start;
    flex-wrap: wrap;
    width: 652rpx;
    height: 652rpx;
}

.picture {
    margin-top: 13rpx;
    margin-left: 13rpx;
    width: 200rpx;
    height: 200rpx;
}

#addPictureButton {
    cursor: pointer;
}

#infoArea {
    flex: 2;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 652rpx;
    padding: 50rpx 30rpx;
}

.title-input {
    border-bottom: solid #FFB085 1rpx;
    font-size: 45rpx;
    color: #6e8ab3;
}

#buttonArea {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 652rpx;
}

#submitButton {
    width: 45%;
    border-radius: 30rpx;
    background-color: #FFB085;
    font-size: large;
    color: #000000;
}