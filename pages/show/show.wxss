/* pages/show/show.wxss */
.picture-show {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    width: 80%;
    height: 82%;
    opacity: 0;
}

.picture-show image {
    width: 100%;
    border-radius: 30rpx;
}

#titleArea {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
}
#title {
    color: #90AACB;
    font-size: 65rpx;
    font-weight: bold;
    letter-spacing: 8rpx;
    text-shadow: #FFB085 8rpx 8rpx 1rpx;
}
#subTitle {
    margin-top: 80rpx;
    text-align: center;
    color: #FFB085;
    font-size: 43rpx;
    font-weight: bold;
    letter-spacing: 5rpx;
}

#saveButton {
    position: absolute;
    bottom: 55rpx;
    right: 220rpx;
    width: 100rpx;
    height: 100rpx;
    cursor: pointer;
}

#shareButton {
    position: absolute;
    bottom: 80rpx;
    right: 70rpx;
    width: 73rpx;
    height: 73rpx;
    background-color: #00000000;
    overflow: visible;
}
#shareButton image {
    position: relative;
    top: -19rpx;
    left: -30rpx;
    width: 73rpx;
    height: 73rpx;
}

.musicButton {
    position: absolute;
    bottom: 75rpx;
    left: 100rpx;
    width: 100rpx;
    height: 100rpx;
    cursor: pointer;
}